/* pages/search/index.wxss */
page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
  font-size: 28rpx;
}
.search_row input {
  background-color: #fff;
  flex: 1;
  height: 100%;
  padding-left: 30rpx;
  font-size: 28rpx;
}
.search_row button {
  width: 110rpx !important;
  font-size: 26rpx !important;
  height: 100%;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10rpx;
}
.serach_content {
  margin-top: 25rpx;
  background-color: #fff;
}
.serach_content .serach_item {
  font-size: 30rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #666;
  padding: 20rpx 10rpx;
}
