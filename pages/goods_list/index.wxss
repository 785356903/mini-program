/* pages/goods_list/index.wxss */
.frist_tab .goods_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.frist_tab .goods_item .goods_item_warp {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.frist_tab .goods_item .goods_item_warp image {
  width: 70%;
}
.frist_tab .goods_item .goods_info_warp {
  flex: 3;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.frist_tab .goods_item .goods_info_warp .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.frist_tab .goods_item .goods_info_warp .goods_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
